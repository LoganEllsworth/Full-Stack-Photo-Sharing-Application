{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // Run Client Script
        {
            "name": "Run Client Script",
            "request": "launch",
            "command": "npm run client",
            "type": "node-terminal",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!${workspaceFolder}/dist/**",
                "!**/node_modules/**"
            ],
            "sourceMaps": true,
            "smartStep": true
        },
        //Back-End
        {
            "name": "Server",
            "type": "node",
            "address": "127.0.0.1",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ],
            "preLaunchTask": "Server"
        }
    ],
    "compounds": [
        {
            "name": "Run All Configs",
            "configurations": [
                "Run Client Script",
                "Server"
            ]
        }
    ]
}
